---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, SITE_TITLE_MOBILE } from "../consts";
import { ContentService, OpenAPI, type HomePageContentModel } from "@/api";

OpenAPI.BASE = import.meta.env.PUBLIC_BASE_URL;
const node: HomePageContentModel = await ContentService.byRouteV20({
  path: "/",
});

const pages = await ContentService.queryV20({
  fetch: `children:${node.id}`,
  sort: ["sortOrder:asc"],
  expand: "all",
});
---

<header class="c-header">
  <div class="o-container">
    <div class="c-header__inner">
      <div class="c-header__left">
        <div>
          <a href="/"><strong>{SITE_TITLE}</strong></a>
        </div>
        <div>
          <span>Lead Software Engineer &amp; 3Ã— Umbraco MVP</span>
        </div>

        <nav class="c-nav">
          <ul>
            {
              pages.items.map((page, index) => (
                <li>
                  <HeaderLink href={page.route.path}>{page.name}</HeaderLink>
                </li>
              ))
            }

            <li>
              <HeaderLink target="_blank" href="/feed.xml">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M12.75 19.5v-.75a7.5 7.5 0 0 0-7.5-7.5H4.5m0-6.75h.75c7.87 0 14.25 6.38 14.25 14.25v.75M6 18.75a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z"
                  ></path>
                </svg>
              </HeaderLink>
            </li>
          </ul>
        </nav>
      </div>

      <div class="c-header__right">
        <button
          type="button"
          class="o-btn c-dropdown-toggle"
          id="dropdown-toggle"
          title="Set light or dark mode"
          aria-haspopup="true"
          aria-expanded="true"
        >
          <!-- Current Mode Icon (e.g., light mode icon) -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            width="30"
            height="30"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            id="icon-light"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z"
            ></path>
          </svg>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            width="30"
            height="30"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            id="icon-dark"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z"
            ></path>
          </svg>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            width="30"
            height="30"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            id="icon-system"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M9 17.25v1.007a3 3 0 0 1-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0 1 15 18.257V17.25m6-12V15a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 15V5.25m18 0A2.25 2.25 0 0 0 18.75 3H5.25A2.25 2.25 0 0 0 3 5.25m18 0V12a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 12V5.25"
            ></path>
          </svg>

          <!-- Current Mode Text (e.g., Light) -->
          <span id="currentModeText">System</span>
        </button>

        <!-- Dropdown Menu -->
        <div class="o-dropdown hidden" id="dropdown-menu" aria-labelledby="dropdown-toggle" role="menu">
          <!-- Dropdown Items -->
          <div role="none">
            <!-- Light Mode -->
            <button role="menuitem" id="lightModeOption">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z"
                ></path>
              </svg>
              Light
            </button>
            <!-- Dark Mode -->
            <button role="menuitem" id="darkModeOption">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z"
                ></path>
              </svg>
              Dark
            </button>
            <!-- System Mode -->
            <button role="menuitem" id="systemModeOption">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M9 17.25v1.007a3 3 0 0 1-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0 1 15 18.257V17.25m6-12V15a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 15V5.25m18 0A2.25 2.25 0 0 0 18.75 3H5.25A2.25 2.25 0 0 0 3 5.25m18 0V12a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 12V5.25"
                ></path>
              </svg>
              System
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
