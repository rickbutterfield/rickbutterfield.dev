---
import type { UpdateAlertElementModel } from "@/api";
import { Marked } from "marked";
import { markedHighlight } from "marked-highlight";
import hljs from "highlight.js";
import "highlight.js/styles/github-dark.css";

const { data } = Astro.props;
const typedData = data as UpdateAlertElementModel;
const updateDate = new Date(typedData?.properties?.date);

const customMarked = new Marked(
  markedHighlight({
    langPrefix: "hljs language-",
    highlight(code, lang, info) {
      const language = hljs.getLanguage(lang) ? lang : "plaintext";
      return hljs.highlight(code, { language }).value;
    },
  }),
);
---

<aside
  class="lg:-mr-32 mb-4 border border-gray-300 dark:border-zinc-700 bg-gray-100 dark:bg-zinc-800 rounded-lg p-4"
>
  <ul class="text-gray-600 dark:text-gray-400 mb-1 not-prose">
    <li>
      <time datetime={updateDate.toISOString()}>
        {
          updateDate.toLocaleDateString("en-us", {
            year: "numeric",
            month: "short",
            day: "numeric",
          })
        }
      </time>
    </li>
  </ul>
  <div set:html={customMarked.parse(typedData?.properties?.content)} />
</aside>
